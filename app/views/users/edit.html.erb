<div class="container">
	<div class="row" style="width: 100%; margin: 50px auto;">
		<h4 style="margin-bottom: 20px; border-left: 2px solid #FF4F02; padding: 10px;">User Edit</h4>
	</div>
</div>

<div class="container">
	<div class="edit-container" style="width:65%; margin: 20px auto;">
		<%= form_for @user do |f| %>
		<div class="form-group">
			<%= f.label :name, "ユーザー名" %>
			<div class="row">
				<%= f.text_field :name, class: "input col-md-4" %>
			</div>
		</div>

		<div class="field">
			<%= f.label :profile, "プロフィール" %>
			<div class="row">
				<%= f.text_area :profile, class: "textarea" %>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :email, "メールアドレス" %>
			<div class="row">
				<%= f.email_field :email, class: "input" %>
			</div>
		</div>

		<div class="field">
			<%= f.label :profile_image, "プロフィール画像" %>
			<div class="row">
				<%= f.attachment_field :profile_image, class: "input" %>
			</div>
		</div>

		<%= f.submit "更新", class: "button is-success" %>
		<% end %>
	</div>
</div>
</div>